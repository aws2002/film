<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/header.ejs") %>
        
            <div class="sidebar">
                <i class="left-menu-icon fas fa-home"></i>
            </div>
            <main class="container">
                <div class="content-container">
                    <div class="featured-content"
                        style="background: linear-gradient(to bottom, rgba(0,0,0,0), #151515), url('./images/f-1.jpg');">
                        <img class="featured-title" src="./images/f-t-1.png" alt="">
                        <p class="featured-desc">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iusto illo
                            dolor
                            deserunt nam assumenda ipsa eligendi dolore, ipsum id fugiat quo enim impedit, laboriosam
                            omnis
                            minima voluptatibus incidunt. Accusamus, provident.</p>
                        <button class="featured-button">WATCH</button>
                    </div>
                    <div class="card">
                        <!-- ./images/233-2332677_image-500580-placeholder-transparent.jpg -->
                        <% if(data.Response=="False" ) { %>
                            <h3>
                                <%= data.Error %>
                            </h3>
                            <% } else { %>
                                <% data.forEach((result)=> { %>
                                    <div class="movie">
                                        <img src="<%= result.poster_path ? " https://image.tmdb.org/t/p/w1280" +
                                            result.poster_path
                                            : "./images/233-2332677_image-500580-placeholder-transparent.jpg" %>"
                                        alt="">
                                        <div class="movie-info">
                                            <h3>
                                                <%= result.title %>
                                            </h3>
                                            <span class="${getColor(vote_average)}">
                                                <%= result.vote_average %>
                                            </span>
                                        </div>
                                        <div class="overview" id="<%=result.id %> ">
                                            <h3>Overview</h3>
                                            <%=result.overview %>
                                                <br />
                                        </div>
                                    </div>
                                    <% }) } %>

                    </div>



                    <div class="featured-content"
                        style="background: linear-gradient(to bottom, rgba(0,0,0,0), #151515), url('./images/f-2.jpg');margin-top: 20px;">
                        <img class="featured-title" src="./images/f-t-2.png" alt="">
                        <p class="featured-desc">Lorem ipsum, dolor sit amet consectetur adipisicing
                            elit. Iusto illo
                            dolor
                            deserunt nam assumenda ipsa eligendi dolore, ipsum id fugiat quo enim
                            impedit, laboriosam
                            omnis
                            minima voluptatibus incidunt. Accusamus, provident.</p>
                        <button class="featured-button">WATCH</button>
                    </div>

                </div>

            </main>
            <%- include("./partials/footer.ejs") %>
                <script src="./js/app.js"></script>
    </body>

</html>